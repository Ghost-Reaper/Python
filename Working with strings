phrase ="Giraffe Academy"


print(phrase)
#print in upercase
print (phrase.upper())
#print in lowercase
print (phrase.lower())
#can tell how many char in a string
print (len(phrase))

#printingfirstcharacter
print (phrase[0])

#index function let us know where char is located
print (phrase.index("a"))

#replace function
print (phrase.replace("Giraffe","Elephant"))


#writing on two seperatr lines
print ("Giraffe\nAcademy")
